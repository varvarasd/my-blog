doctype html
html
  block config
  head
    if title
      title #{title}
    if description
      meta(name="description", content="description")
      meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    if config.entry.css.inline
      link(rel="stylesheet", href=inlinePath, inline)
  body
    //- this '#top' and '#continue' will each generate an empty div with the given
      id (#top and below #continue) used to navigate to it when 'top' and 
      'continue' links are clicked
    #top
    block welcome
    #continue
    .page-wrapper
      .container
        .content
          block content
        include ../_component/side/side
      include ../_component/footer/footer
//- add external css at the end of HTML so it doesnt block any resource download
if config.entry.css.external
  link(href="/style.css", rel="stylesheet")
